%h1 Sign up
= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = render "devise/shared/error_messages", resource: resource
  = f.label :name, "名前"
  = f.text_field :name, class: "form-group form-control"

  = f.label :email
  = f.email_field :email, autofocus: true, autocomplete: "email", class: "form-group form-control"

  = f.label :password
  - if @minimum_password_length
    %em
      (#{@minimum_password_length}文字以上)    
  = f.password_field :password, autocomplete: "new-password", class: "form-group form-control"

  = f.label :password_confirmation
  = f.password_field :password_confirmation, autocomplete: "new-password", class: "form-group form-control"

  = f.submit "Create my account", class: "btn btn-primary btn-block"

= render "devise/shared/links"
