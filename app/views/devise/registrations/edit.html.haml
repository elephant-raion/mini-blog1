%h1 Edit #{resource_name.to_s.humanize}
= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
  = render "devise/shared/error_messages", resource: resource
  %div.card
    %div.card-header
      %strong= f.label :name, "名前"
    %ul.list-group.list-group-flush
      %li.list-group-item    
        = f.text_field :name, class: "form-group form-control"
    %div.card-header
      %strong= f.label :email
    %ul.list-group.list-group-flush
      %li.list-group-item      
        = f.email_field :email, autofocus: true, autocomplete: "email", class: "form-group form-control"
    %div.card-header
      %strong= f.label :profile, "プロフィール"
    %ul.list-group.list-group-flush
      %li.list-group-item      
        = f.text_area :profile, class: "form-group form-control"
    %div.card-header
      %strong= f.label :url, "ブログURL"
    %ul.list-group.list-group-flush
      %li.list-group-item      
        = f.text_field :url, class: "form-group form-control"
    %div.card-header
      %strong= f.label :password
      (#{@minimum_password_length}文字以上)
    %ul.list-group.list-group-flush
      %li.list-group-item            
        = f.password_field :password, autocomplete: "new-password", class: "form-group form-control"
    %div.card-header
      %strong= f.label :password_confirmation
    %ul.list-group.list-group-flush
      %li.list-group-item          
        = f.password_field :password_confirmation, autocomplete: "new-password", class: "form-group form-control"
  
  = f.submit "Update", class: "btn btn-primary btn-block"
  %br
  = button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-primary btn-block"
= link_to "Back", :back
