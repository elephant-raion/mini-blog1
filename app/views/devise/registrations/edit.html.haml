%h1 Edit #{resource_name.to_s.humanize}
= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
  = render "devise/shared/error_messages", resource: resource
  = f.label :name, "名前"
  = f.text_field :name, class: "form-group form-control"

  = f.label :email
  = f.email_field :email, autofocus: true, autocomplete: "email", class: "form-group form-control"
  - if devise_mapping.confirmable? && resource.pending_reconfirmation?
    %div
      Currently waiting confirmation for: #{resource.unconfirmed_email}
  
  = f.label :profile, "プロフィール"
  = f.text_area :profile, class: "form-group form-control"

  = f.label :url, "ブログURL"
  = f.text_field :url, class: "form-group form-control"

  = f.label :password
  - if @minimum_password_length
    %em
      (#{@minimum_password_length}文字以上)    
  = f.password_field :password, autocomplete: "new-password", class: "form-group form-control"

  = f.label :password_confirmation
  = f.password_field :password_confirmation, autocomplete: "new-password", class: "form-group form-control"
  
  = f.submit "Update", class: "btn btn-primary btn-block"
%h3 Cancel my account
%p
  Unhappy? #{button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-primary btn-block"}
= link_to "Back", :back
